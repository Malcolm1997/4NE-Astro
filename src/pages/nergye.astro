---
import { Picture } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import nergye from "../assets/img/Logos-Alianzas/nergye.svg";
import proyect from "../assets/proyectNergye.json";
---

<Layout
	title="Proyectos de Energías Renovables e Ingeniería en Oil & Gas - 4NE"
	description="Descubre nuestros proyectos en energías renovables, biogás y oil & gas, con un enfoque en ingeniería EPC y consultoría técnica."
>
	<main>
		<h1
			class="has-text-centered is-size-3 mt-5 mb-6"
			id="title-secction-ing-proyect"
		>
			<Picture src={nergye} alt="Nergye" />
		</h1>

		<h1 class="is-size-3 has-text-centered mt-6">
							Alianza estratégica — Soluciones energéticas y servicios
				relacionados
		</h1>
		<div class="my-2">
			<p class="is-size-5-5">
				Nergye es una empresa dedicada a soluciones energéticas,
				proyectos de eficiencia y servicios técnicos. 
			</p>
		</div>
		<h2 class="is-size-4 mt-6">Servicios destacados</h2>
		<ul>
			{
				proyect.nergye.service.map((proyect) => (
							<li class="my-3">
                                <div class="is-size-6 mb-2">
                                    <p>
										<i class="fa fa-check-circle proyect-check" aria-hidden="true"></i>
										<span class="proyect-title">{proyect.title}</span>
										{" "}{proyect.description}
                                    </p>
                                </div>
                            </li>
                        ))
                    }
		</ul>
    <section class="contact mt-6">
    <h2 class="is-size-4">Contacto</h2>
    <ul class="contact-list">
        <li class="contact-item">
            <span class="contact-icon" aria-hidden="true">
                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" role="img" aria-hidden="true">
                    <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5A2.5 2.5 0 1 1 12 6.5a2.5 2.5 0 0 1 0 5z"/>
                </svg>
            </span>
            <a
                class="contact-text contact-link"
                href="https://www.google.com/maps/search/?api=1&query=Av.+C%C3%B3rdoba+629+piso+3+Buenos+Aires+Argentina"
                target="_blank"
                rel="noopener noreferrer"
            >
                Av. Córdoba 629, piso 3, Bs. As., ARG
            </a>
        </li>

        <li class="contact-item">
            <span class="contact-icon" aria-hidden="true">
                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" role="img" aria-hidden="true">
                    <path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4-8 5L4 8V6l8 5 8-5v2z"/>
                </svg>
            </span>
            <a class="contact-link" href="mailto:info@nergye.com">info@nergye.com</a>
        </li>

        <li class="contact-item">
            <span class="contact-icon" aria-hidden="true">
                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" role="img" aria-hidden="true">
                    <path d="M6.62 10.79a15.053 15.053 0 0 0 6.59 6.59l2.2-2.2a1 1 0 0 1 1.01-.24c1.12.37 2.33.57 3.57.57a1 1 0 0 1 1 1V20a1 1 0 0 1-1 1C10.07 21 3 13.93 3 4a1 1 0 0 1 1-1h3.5a1 1 0 0 1 1 1c0 1.24.2 2.45.57 3.57.12.32.03.69-.24 1.01l-2.21 2.21z"/>
                </svg>
            </span>
            <a class="contact-link" href="tel:+5491144384064">(+54 9 11) 4438-4064</a>
        </li>
    </ul>

    <div class="contact-actions mt-3">
        <a class="button is-rounded is-inverted button-class button-nergye" href="https://nergye.com" target="_blank" rel="noopener noreferrer">
            Visitar sitio de Nergye
        </a>
    </div>
</section>
	</main>
<style>
.contact-list {
    list-style: none;
    padding: 0;
    margin: 0.75rem 0 0 0;
    max-width: 720px;
}

/* Más separación entre items y respiración vertical */
.contact-item {
    display: flex;
    align-items: center;
    gap: 1rem;             /* más separación horizontal entre icono y texto */
    padding: 0.9rem 0;     /* más espacio vertical por item */
    border-bottom: 1px dashed rgba(0,0,0,0.06);
}
.contact-item:last-child {
    border-bottom: none;
}

/* Icono */
.contact-icon {
    flex: 0 0 28px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}
.contact-icon svg {
    width: 20px;
    height: 20px;
    fill: #EC6608 !important;
    opacity: 0.95;
}

/* Texto del contacto: aumentar letter-spacing y line-height para mejor lectura */
.contact-text {
    font-size: 1rem;
    color: #222;
    letter-spacing: 0.32px;   /* espaciado entre letras */
    line-height: 1.55;        /* más altura de línea para respiración */
}

/* Enlaces de contacto: color #005C66, sin negrita y más separación entre letras */
.contact-link {
    color: #005C66 !important;
    text-decoration: none !important;
    font-weight: 400;              /* sin negrita */
    position: relative;
    padding-bottom: 3px;
    transition: color 140ms ease;
    cursor: pointer;
    letter-spacing: 0.36px;       /* espaciado entre letras en enlaces */
    line-height: 1.45;
}

/* Underline animado */
.contact-link::before {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, #005C66, transparent);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 180ms ease;
    border-radius: 2px;
}

/* Indicador ↗ */
.contact-link::after {
    content: "↗";
    margin-left: 6px;
    font-size: 0.85em;
    opacity: 0.65;
    transition: transform 140ms ease, opacity 140ms ease;
    color: #005C66;
}

/* Estados interactivos */
.contact-link:hover::before,
.contact-link:focus::before {
    transform: scaleX(1);
}
.contact-link:hover::after,
.contact-link:focus::after {
    transform: translateY(-1px);
    opacity: 1;
}
.contact-link:hover,
.contact-link:focus {
    color: #005C66 !important;
    outline: none;
}

/* Focus accesible */
.contact-link:focus {
    box-shadow: 0 0 0 4px rgba(0,92,102,0.12);
    border-radius: 4px;
}

/* Botón y acciones */
.contact-actions {
    margin-top: 1rem; /* un poco más de espacio sobre el botón */
}
.btn-nergye {
    display: inline-block;
    background: #3273dc;
    color: #fff;
    padding: 0.55rem 0.9rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    box-shadow: 0 2px 6px rgba(50,115,220,0.15);
}
.btn-nergye:hover {
    background: #275fb0;
    box-shadow: 0 4px 10px rgba(39,95,176,0.14);
    transform: translateY(-1px);
}
.button-nergye{
    margin: auto;
    background-color: #005C66;
}

/* Underline style for project titles */
.proyect-title {
  text-decoration: underline;
  text-decoration-color: currentColor; /* usa el mismo color que el texto */
  text-underline-offset: 3px;
  text-decoration-thickness: 2px;
  text-decoration-skip-ink: auto;
  font-weight: inherit;
  letter-spacing: 0.36px;               /* opcional: mantener espaciado similar */
}

/* icono de check delante de cada item */
.proyect-check {
  color: #005C66;
  margin-right: 0.5rem;
  font-size: 1.05rem;
  vertical-align: text-bottom;
  opacity: 0.95;
}

/* Responsive: mantener espaciado más compacto en móvil */
@media (max-width: 600px) {
    .contact-item {
        gap: 0.75rem;
        padding: 0.7rem 0;
    }
    .contact-text, .contact-link {
        font-size: 0.95rem;
        letter-spacing: 0.28px;
        line-height: 1.4;
    }
    .btn-nergye {
        width: 100%;
        text-align: center;
        padding: 0.7rem;
    }
}
</style>
</Layout>
