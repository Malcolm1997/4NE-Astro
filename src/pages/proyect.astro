---
import Layout from "../layouts/Layout.astro";

import proyect from "../assets/proyect.json";
---

<Layout title="4NE - Proyectos">
	<script src="../scripts/changeType.js"></script>
	<main>
		<h2
			class="has-text-centered is-size-2 mt-5 mb-6"
			id="title-secction-ing-proyect"
		>
			Proyectos
		</h2>
		<div id="service-ing-container">
			<div>
				<div>
					<div
						class="is-flex is-justify-content-space-around has-text-centered"
					>
						<div
							class="is-flex is-flex-direction-column is-justify-content-center div-proyect"
						>
							<h3 class="is-size-4 mb-5">En obra</h3>
							{
								proyect.ingenieria.proyect.inProgress.map(
									(proyect, index) => (
										<div class="my-6">
											<h4 class="is-size-5 mb-2">
												{proyect.title}
											</h4>
											{proyect.cliente ? (
												<p class="mb-2">
													<i class="fa-solid fa-user-tie mr-2 logo-client" />{" "}
													<b>{proyect.cliente}</b>
												</p>
											) : (
												""
											)}
											<p class="mb-2">
												<i class="fa-solid fa-location-dot mr-2 logo-client" />{" "}
												<b>{proyect.ubicacion}</b>
											</p>
											<p class="is-size-6 mb-5">
												{proyect.description}
											</p>
											<p class="mb-2">
												<b>Impacto: </b>
												{proyect.impacto}
											</p>
										</div>
									)
								)
							}
						</div>
						<div
							class="is-flex is-flex-direction-column is-justify-content-center div-proyect"
						>
							<h3 class="is-size-4 mb-5">Finalizados</h3>
							{
								proyect.ingenieria.proyect.finished.map(
									(proyect, index) => (
										<div class="my-6">
											<h4 class="is-size-5 mb-2">
												{proyect.title}
											</h4>
											{proyect.cliente ? (
												<p class="mb-2">
													<i class="fa-solid fa-user-tie mr-2 logo-client" />{" "}
													<b>{proyect.cliente}</b>
												</p>
											) : (
												""
											)}
											<p class="mb-2">
												<i class="fa-solid fa-location-dot mr-2 logo-client" />{" "}
												<b>{proyect.ubicacion}</b>
											</p>
											<p class="is-size-6 mb-5">
												{proyect.description}
											</p>
											<p class="mb-2">
												<b>Impacto: </b>
												{proyect.impacto}
											</p>
										</div>
									)
								)
							}
						</div>
					</div>
				</div>
			</div>
		</div>

		<div id="service-ren-container">
			<div>
				<div>
					<div
						class="is-flex is-justify-content-space-around has-text-centered"
					>
						<div
							class="is-flex is-flex-direction-column is-justify-content-center div-proyect"
						>
							<h3 class="is-size-4 mb-5">En obra</h3>
							{
								proyect.renovables.proyect.inProgress.map(
									(proyect, index) => (
										<div class="my-6">
											<h4 class="is-size-5 mb-2">
												{proyect.title}
											</h4>
											{proyect.cliente ? (
												<p class="mb-2">
													<i class="fa-solid fa-user-tie mr-2 logo-client" />{" "}
													<b>{proyect.cliente}</b>
												</p>
											) : (
												""
											)}
											<p class="mb-2">
												<i class="fa-solid fa-location-dot mr-2 logo-client" />{" "}
												<b>{proyect.ubicacion}</b>
											</p>
											<p class="is-size-6 mb-5">
												{proyect.description}
											</p>
											<p class="mb-2">
												<b>Impacto: </b>
												{proyect.impacto}
											</p>
										</div>
									)
								)
							}
						</div>
						<div class="div-medio"></div>
						<div
							class="is-flex is-flex-direction-column is-justify-content-center div-proyect"
						>
							<h3 class="is-size-4 mb-5">Finalizados</h3>
							{
								proyect.renovables.proyect.finished.map(
									(proyect, index) => (
										<div class="my-6">
											<h4 class="is-size-5 mb-2">
												{proyect.title}
											</h4>
											{proyect.cliente ? (
												<p class="mb-2">
													<i class="fa-solid fa-user-tie mr-2 logo-client" />{" "}
													<b>{proyect.cliente}</b>
												</p>
											) : (
												""
											)}
											<p class="mb-2">
												<i class="fa-solid fa-location-dot mr-2 logo-client" />{" "}
												<b>{proyect.ubicacion}</b>
											</p>
											<p class="is-size-6 mb-5">
												{proyect.description}
											</p>
											<p class="mb-2">
												<b>Impacto: </b>
												{proyect.impacto}
											</p>
										</div>
									)
								)
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>
</Layout>
