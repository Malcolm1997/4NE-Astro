---
import Layout from "../layouts/Layout.astro";

import proyect from "../assets/proyect.json";

---

<Layout title="4NE - Proyectos">
	<script src="../scripts/changeType.js"></script>
	<main>
		<h2 class="has-text-centered is-size-2 mt-5" id="title-secction-ing-proyect">
			Proyectos
		</h2>
		<hr class="has-background-black" />
		<div id="service-ing-container">
			<div>
				<div>
					<div
						class="is-flex is-justify-content-space-around has-text-centered"
					>
						<div
							class="is-flex is-flex-direction-column is-justify-content-center div-proyect"
						>
							<h3 class="is-size-4 mb-5">En obra</h3>
							{
								proyect.ingenieria.proyect.inProgress.map(
									(proyect, index) => (
										<div>
											<hr class="has-background-black linea-separadora" />
											<h4 class="is-size-5 mb-2">
												{proyect.title}
											</h4>
											<p class="mb-2"><i class="fa-solid fa-user-tie mr-2 logo-client"></i> <b>{proyect.cliente}</b></p>
											<p class="mb-2"><i class="fa-solid fa-map-location-dot mr-2 logo-client"></i> <b>{proyect.ubicacion}</b></p>
											<p class="is-size-6">
												{proyect.description}
											</p>
										</div>
									)
								)
							}
						</div>
						<div class="div-medio"></div>
						<div
							class="is-flex is-flex-direction-column is-justify-content-center div-proyect"
						>
							<h3 class="is-size-4 mb-5">Finalizados</h3>
							{
								proyect.ingenieria.proyect.finished.map(
									(proyect, index) => (
										<div>
											<hr class="has-background-black linea-separadora" />
											<h4 class="is-size-5 mb-2">
												{proyect.title}
											</h4>
											<p class="mb-2"><i class="fa-solid fa-user-tie mr-2 logo-client"></i> <b>{proyect.cliente}</b></p>
											<p class="mb-2"><i class="fa-solid fa-map-location-dot mr-2 logo-client"></i> <b>{proyect.ubicacion}</b></p>
											<p class="is-size-6">
												{proyect.description}
											</p>
										</div>
									)
								)
							}
						</div>
					</div>
				</div>
			</div>
		</div>

		<div id="service-ren-container">
			<div>
				<div>
					<div
						class="is-flex is-justify-content-space-around has-text-centered"
					>
						<div
							class="is-flex is-flex-direction-column is-justify-content-center div-proyect"
						>
							<h3 class="is-size-4 mb-5">En obra</h3>
							{
								proyect.renovables.proyect.inProgress.map(
									(proyect, index) => (
										<div>
											<hr class="has-background-black linea-separadora" />
											<h4 class="is-size-5 mb-2">
												{proyect.title}
											</h4>
											<p class="mb-2"><i class="fa-solid fa-user-tie mr-2 logo-client"></i> <b>{proyect.cliente}</b></p>
											<p class="mb-2"><i class="fa-solid fa-map-location-dot mr-2 logo-client"></i> <b>{proyect.ubicacion}</b></p>
											<p class="is-size-6">
												{proyect.description}
											</p>
										</div>
									)
								)
							}
						</div>
						<div class="div-medio"></div>
						<div
							class="is-flex is-flex-direction-column is-justify-content-center div-proyect"
						>
							<h3 class="is-size-4 mb-5">Finalizados</h3>
							{
								proyect.renovables.proyect.finished.map(
									(proyect, index) => (
										<div>
											<hr class="has-background-black linea-separadora" />
											<h4 class="is-size-5 mb-2">
												{proyect.title}
											</h4>
											<p class="mb-2"><i class="fa-solid fa-user-tie mr-2 logo-client"></i> <b>{proyect.cliente}</b></p>
											<p class="mb-2"><i class="fa-solid fa-map-location-dot mr-2 logo-client"></i> <b>{proyect.ubicacion}</b></p>
											<p class="is-size-6">
												{proyect.description}
											</p>
										</div>
									)
								)
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>
</Layout>
