---
import Layout from "../layouts/Layout.astro";
import { Picture } from 'astro:assets';
import ingenieria from '../assets/img/presentacion.jpeg'
import renovables from '../assets/img/digestor.webp'

---

<Layout title="4NE - Incio">
	<main>
		<div class="is-flex is-flex-direction-row is-justify-content-center py-5 div-index">
			<Picture class="image-index image is-3by4" id="image-index" src={ingenieria} alt='Logo de 4NE'/>
			<Picture class="image-index image is-3by4" src={renovables} alt='Logo de 4NE'/> 
		</div>
	</main>
</Layout>

<style></style>

<script>
	import anime from 'animejs/lib/anime.es.js';
	
	let mouseOver = () => {
		anime({
			
			translateX:100,
			scale: 1,
			duration:1000
		})
	}
	
	
	document.getElementById("image-index").addEventListener("mouseover", mouseOver);
	
	anime.set("#image-index", {
		translateX:250,
		scale: .8,
	})



</script>
